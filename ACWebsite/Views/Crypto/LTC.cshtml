@model ACWebsite.Models.returnStats

@{
    ViewBag.Title = "Litecoin 24 Hour Statistics - Anthony Cook";
    Layout = "~/Views/Shared/_ACWebsiteTemplate.cshtml";
}

<h2>Litecoin 24 Hour Statistics</h2>

<div>
    <h4>Litecoin Statistics in the last 24 hours. <small>Information provided by the Coinbase Pro API</small></h4>
    <hr />
    <p>
        @Html.ActionLink("<< Back to List", "Index")
    </p>
    <hr/>
    <div class="container">
        <div class="row">
            <div class="col-lg-12"><h3>Prices Today</h3></div>
            <div class="col-lg-3">
                <h4 style="display:block;"><strong>Day Open - @DateTime.Today.ToShortDateString()</strong></h4>
                £@Html.DisplayFor(model => model.open)
            </div>
            <div class="col-lg-3">
                <h4 style="display:block;"><strong>Day Lowest - @DateTime.Today.ToShortDateString()</strong></h4>
                £@Html.DisplayFor(model => model.low)
            </div>
            <div class="col-lg-3">
                <h4 style="display:block;"><strong>Day Highest - @DateTime.Today.ToShortDateString()</strong></h4>
                £@Html.DisplayFor(model => model.high)
            </div>
            <div class="col-lg-3">
                <h4 style="display:block;"><strong>Day Latest - @DateTime.Today.ToShortDateString()</strong></h4>
                £@Html.DisplayFor(model => model.last)
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-lg-12"><h3>Growth / Loss Today</h3></div>
            <div class="col-lg-6">
                <h4 style="display:block;"><strong>Day Growth / Loss - @DateTime.Today.ToShortDateString()</strong></h4>
                £@Html.DisplayFor(model => model.growthtoday)
            </div>
            <div class="col-lg-6">
                <h4 style="display:block;"><strong>Day Growth / Loss Percentage - @DateTime.Today.ToShortDateString()</strong></h4>
                @Html.DisplayFor(model => model.growthtodaypct)%
            </div>
        </div>
        <hr/>
        <div class="row">
            <div class="col-lg-12"><h3>Volumes</h3></div>
            <div class="col-lg-6">
                <h4 style="display:block;"><strong>Day Volume - @DateTime.Today.ToShortDateString()</strong></h4>
                @Html.DisplayFor(model => model.volume) LTC
            </div>
            <div class="col-lg-6">
                <h4 style="display:block;"><strong>Day 30 Days Volume - @DateTime.Today.ToShortDateString()</strong></h4>
                @Html.DisplayFor(model => model.volume_30day) LTC
            </div>
        </div>




    </div>


</div>

